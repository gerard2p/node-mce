{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "target": "es2018",
    "sourceMap": false,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/**/*.spec.ts",
    "lib",
    "templates",
    "node_modules"
  ]
}
