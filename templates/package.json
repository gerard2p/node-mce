{
    "name": "{{application}}",
    "version": "0.0.0",
    "description": "",
    "main": "./{{application}}",
    "bin": {
        "{{application}}": "./{{application}}"
    },
    "scripts": {
        "clean": "node incremental",
        "templates": "node cpx \"templates/**/*\"  lib/templates",
        "pkg-files": "node cpx \"?(package.json|README.md|LICENSE|{{application}})\"  lib",
        "compile": "tsc",
        "templates:w": "npm run templates -- -w",
        "pkg-files:w": "npm run pkg-files -- -w",
        "preclean": "rimraf ./incremental.tsbuildinfo",
        "compile:w": "tsc --incremental --tsBuildInfoFile ./incremental.tsbuildinfo -w",
        "build": "npm-run-parallel templates pkg-files compile",
        "dev": "npm-run-parallel clean templates:w pkg-files:w compile:w",
        "test": "jest"
    },
    "repository": {},
    "keywords":["{{application}}", "cmd"],
    "author":"{{author}}",
    "license":"MIT",
    "devDependencies": {
        "@types/jest": "^26.0.15",
        "chokidar": "^3.4.3",
        "glob": "^7.1.6",
        "jest": "^26.6.3",
        "ts-jest": "^26.4.4",
        "npm-run-parallel": "^0.6.0",
        "@types/node": "^10.17.47",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "@gerard2p/mce": "^{{local_version}}"
    }
}