{
    "name": "{{application}}",
    "version": "1.0.0",
    "description": "",
    "main": "./{{application}}",
    "bin": {
        "{{application}}": "./{{application}}"
    },
    "scripts": {
        "clean": "node incremental",

        "vscode": "node cpx ./templates/**/.vscode/**/*  lib/templates --clean",
        "templates": "node cpx ./templates/**/*  lib/templates --clean",
        "pkg-files": "node cpx \"?(package.json|README.md|LICENSE|{{application}})\"  lib --clean",
        "compile": "tsc",

        "vscode:w": "npm run vscode -- -w",
        "templates:w": "npm run templates -- -w",
        "pkg-files:w": "npm run pkg-files -- -w",

        "precompile:w": "rimraf ./incremental.tsbuildinfo",
        "compile:w": "tsc --incremental --tsBuildInfoFile ./incremental.tsbuildinfo -w",

        "build": "npm-run-parallel templates pkg-files compile vscode",

        "dev": "npm-run-parallel compile:w clean templates:w pkg-files:w vscode:w",


        "doc": "typedoc --options .typedoc.json --navigation-label-externals \"Internal API\"",
        "test": "jest"
    },
    "repository": {},
    "keywords":["{{application}}", "cmd"],
    "author":"",
    "license":"MIT",
    "devDependencies": {
        "@types/jest": "^25.1.2",
        "chokidar": "^3.3.1",
        "glob": "^7.1.6",
        "jest": "^25.1.0",
        "ts-jest": "^25.2.0",
        "npm-run-parallel": "^0.6.0",
        "cpx": "^1.5.0",
        "@types/node": "^10.10.3",
        "typescript": "^3.7.5"
    },
    "dependencies": {
        "@gerard2p/mce": "^2.0.0"
    }
}