{
  "files.exclude": {
    "node_modules": true,
    "package-lock.json": true
  },
  "files.associations": {
    "**/templates/**/*.ts": "plaintext",
    "**/templates/**/*.json": "plaintext"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.organizeImports": true,
      "source.fixAll.eslint": true
    }
  }
}
